{% extends 'base.html.twig' %}

{% block title %}Détails de l'auteur{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Georgia', serif;
        background-color: #fdf6e3; /* couleur papier ancien */
        color: #4b2e2e; /* texte marron foncé */
    }
    h1 {
        text-align: center;
        color: #4b2e2e;
        margin-bottom: 20px;
        font-size: 2em;
    }
    .author-card {
        max-width: 400px;
        margin: 30px auto;
        background-color: #fff8f0;
        border: 1px solid #d8c2a0;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
    }
    .author-card img {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
        margin-bottom: 15px;
        border: 2px solid #d8c2a0;
    }
    .author-card p {
        font-size: 1.05em;
        margin: 8px 0;
        color: #5a3f36;
    }
</style>

<div class="author-card">
   <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="150">

    <p><strong>Nom :</strong> {{ author.username|upper }}</p>
    <p><strong>Email :</strong> {{ author.email }}</p>
    <p><strong>Nombre de livres :</strong> {{ author.nb_books }}</p>
</div>
{% endblock %}
